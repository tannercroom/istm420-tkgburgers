<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TKG Burgers</title>
    <link rel="stylesheet" href="~/css/MasterPage.css" />
</head>
<body>
    <div id="header">
        <div id="nav">
            <ul>
                <li>
                    <a asp-controller="Home" asp-action="Index">TKG Burgers</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="About">About Us</a>
                </li>
                <li>
                    <a asp-controller="Product" asp-action="Order">Order Online</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Contact">Contact Us</a>
                </li>
            </ul>
        </div>
        <img class="photo" src="~/images/Banner.png" alt="Burger & Fries Banner" />
    </div>
    <div id="content">
        <main>
            @RenderBody()
        </main>
    </div>
    <div id="footer">
        <div id="footerNav">
        </div>
        <div id="copyright">
            <p>&copy; 2022 TKG Burgers</p>
        </div>
    </div>
</body>
</html>
